/**index.wxss**/
page {
  background: #f5f5f5;
  height: 100vh;
}

.main-content {
  padding: 16px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

/* 欢迎信息 */
.welcome {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.welcome-title {
  font-size: 24px;
  font-weight: bold;
}

.welcome-date {
  font-size: 14px;
  color: #666;
}

/* 天气卡片 */
.weather-card {
  background: white;
  border-radius: 24px;
  padding: 24px;
}

.weather-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.city {
  font-size: 20px;
  font-weight: 600;
}

.temperature {
  display: flex;
  align-items: baseline;
  margin-top: 8px;
}

.temp-num {
  font-size: 48px;
  font-weight: bold;
}

.temp-unit {
  font-size: 24px;
  margin-left: 4px;
}

.weather-desc {
  color: #666;
  margin-top: 8px;
}

.weather-icon {
  width: 64px;
  height: 64px;
  background: #FFB800;
  border-radius: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32px;
}

.weather-details {
  margin-top: 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  color: #666;
}

.progress-bar {
  height: 4px;
  background: #E5E7EB;
  border-radius: 2px;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: #FFB800;
  border-radius: 2px;
}

/* 预报卡片 */
.forecast-card {
  background: white;
  border-radius: 24px;
  padding: 24px;
}

.card-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 16px;
  display: block;
}

.forecast-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.forecast-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date {
  color: #666;
}

.forecast-weather {
  display: flex;
  align-items: center;
  gap: 12px;
}

.weather-emoji {
  font-size: 20px;
}

.forecast-temp {
  font-weight: 500;
}

/* 风格卡片 */
.style-card {
  background: white;
  border-radius: 24px;
  padding: 24px;
}

.style-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
  margin-bottom: 24px;
}

.style-btn {
  padding: 12px;
  border-radius: 12px;
  border: 2px solid #E5E7EB;
  text-align: center;
  font-weight: 500;
  transition: all 0.3s;
}

.style-btn.active {
  border-color: #3B82F6;
  background: #EFF6FF;
  color: #3B82F6;
}

.generate-btn {
  width: 100%;
  background: #3B82F6;
  color: white;
  padding: 16px;
  border-radius: 12px;
  font-weight: 500;
  font-size: 18px;
  box-shadow: 0 8px 16px rgba(59, 130, 246, 0.2);
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background: white;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
}

.tab-item.active {
  color: #3B82F6;
}

.tab-icon {
  font-size: 20px;
  margin-bottom: 2px;
}

.tab-text {
  font-size: 12px;
}
